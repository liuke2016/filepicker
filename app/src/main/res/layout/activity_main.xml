<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.evergrande.filepicker.com.lynn.filepicker.MainActivity">

    <Button
        android:id="@+id/btn_pick_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pick_image"/>

    <Button
        android:id="@+id/btn_pick_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pick_video"/>

    <Button
        android:id="@+id/btn_pick_audio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pick_audio"/>

    <Button
        android:id="@+id/btn_pick_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pick_other_file"/>
    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
